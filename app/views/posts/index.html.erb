<h2>Post Index</h2>

<table class="table table-hover">
<% @posts.each do |post| %>
<tr>
	<td><%= link_to(post.title, post.url) %> (<%= link_to "#{pluralize post.comments.count, 'comment'}", post_path(post) %>)</td>
</tr>
<% end %>
</table>

<%= link_to raw("<button class=\"btn\" type=\"button\">Create new post</button>"), new_post_path %>

