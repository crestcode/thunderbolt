<h2>Submit a new link</h2>

<%= form_for(@post) do |f| %>
	<% if @post.errors.any? %>
		<div class='alert alert-error'>
			<%= @post.errors.full_messages.join("<br>").html_safe %>		
		</div>
	<% end %>
	<div class="field">
		<%= f.label :url, "URL:" %>
		<%= f.text_field :url, :placeholder => "URL" %>
	</div>
	<%= f.label :title, "Title:" %>
	<%= f.text_field :title, :placeholder => "Title" %>
	<%= fields_for @category do |c| %>
		<%= c.label :name, "Category (optional):" %>
		<%= c.text_field :name, :placeholder => "Category" %>
	<% end %>
	<br>
	<div class="actions">
		<%= f.submit "Save post!" %>
	</div>
<% end %>


